{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "LPegRex Grammar",
	"scopeName": "source.lpegrex",
	"patterns": [
		{
			"include": "#keywords"
		},
		{
			"include": "#strings"
		},
		{
			"include": "#constants"
		}
	],
	"repository": {
		"keywords": {
			"patterns": [
				{
					"name": "constant.other.lpegrex",
					"match": "(\\!|\\*|\\?|\\+)"
				},
				{
					"name": "constant.other.lpegrex",
					"match": "(\\<--)"
				}
			]
		},
		"strings": {
			"patterns": [
				{
					"name": "string.regexp.lpegrex",
					"begin": "\\[",
					"end": "]",
					"patterns": [
						{
							"name": "constant.character.escape.lpegrex",
							"match": "\\\\."
						}
					]
				},
				{
					"name": "string.quoted.single.lpegrex",
					"begin": "'",
					"end": "'",
					"patterns": [
						{
							"name": "constant.character.escape.lpegrex",
							"match": "\\\\."
						}
					]
				},
				{
					"name": "string.quoted.double.lpegrex",
					"begin": "\"",
					"end": "\"",
					"patterns": [
						{
							"name": "constant.character.escape.lpegrex",
							"match": "\\\\."
						}
					]
				},
				{
					"name": "string.quoted.other.lpegrex",
					"begin": "\"",
					"end": "\"",
					"patterns": [
						{
							"name": "constant.character.escape.lpegrex",
							"match": "\\\\."
						}
					]
				}
			]
		},
		"constants": {
			"patterns": [
				{
					"name": "storage.type.lpegrex",
					"match": "\\b([A-Z][A-Z0-9_]*)\\b"
				},
				{
					"name": "constant.numeric.lpegrex",
					"match": "\\b([a-zA-Z][a-zA-Z0-9_]*)\\b"
				},
				{
					"name": "comment.lpegrex",
					"match": "--.*\\n"
				},
				{
					"name": "variable.parameter.lpegrex",
					"match": "/"
				}
			]
		}
	}
}